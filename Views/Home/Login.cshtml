@{
    ViewData["Title"] = "Pickup & Ease";
    Layout = "_SimpleLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-section">
                <i class="fas fa-recycle logo-icon"></i>
                <h1 class="brand-name">Pickup & Ease</h1>
            </div>
            <h2 class="login-title">Welcome to Pickup & Ease!</h2>
            <p class="login-subtitle">Please log in to continue.</p>
        </div>

        <div class="login-body">
            <div class="d-grid gap-3 mx-auto">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-login">
                    <i class="fas fa-sign-in-alt"></i>
                    Sign In
                </a>
            </div>
        </div>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year Pickup & Ease. All rights reserved.</p>
        </div>
    </div>
</div>