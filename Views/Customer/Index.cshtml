@model IEnumerable<Kutip.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Customer List</h2>

    <div class="mb-3 text-right">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().c_Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().c_ContactNo)</th>
                <th>@Html.DisplayNameFor(model => model.First().c_Email)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.c_Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.c_ContactNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.c_Email)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.c_ID" class="btn btn-sm btn-primary mx-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.c_ID" class="btn btn-sm btn-info mx-1">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.c_ID" class="btn btn-sm btn-danger mx-1">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>