@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
    Layout = "_SimpleLayout"; // Ensure this layout is set
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-section">
                <i class="fas fa-recycle logo-icon"></i>
                <h1 class="brand-name">Pickup & Ease</h1>
            </div>
            <h2 class="login-title">@ViewData["Title"]</h2>
            <p class="login-subtitle">Enter your email address to receive a new confirmation link.</p>
        </div>

        <div class="login-body">
            <form method="post">
                <div class="form-group mb-3">
                    @* Changed form-floating to form-group for consistency with login page labels *@
                    <label asp-for="Input.Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email Address
                    </label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-primary btn-login">
                    <i class="fas fa-paper-plane"></i> @* Added an icon for consistency *@
                    Resend
                </button>
            </form>
        </div>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year KUTIP. All rights reserved.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}