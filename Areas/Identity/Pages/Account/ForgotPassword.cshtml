@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_SimpleLayout";

}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-section">
                <i class="fas fa-recycle logo-icon"></i>
                <h1 class="brand-name">KUTIP</h1>
            </div>
            <h2 class="login-title">Reset Your Password</h2>
            <p class="login-subtitle">Enter your email address to receive a password reset link.</p>
        </div>

        <div class="login-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email Address
                    </label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-login">
                    <i class="fas fa-key"></i>
                    Reset Password
                </button>
            </form>
        </div>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year KUTIP. All rights reserved.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}