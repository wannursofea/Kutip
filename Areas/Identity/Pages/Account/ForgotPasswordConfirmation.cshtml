@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = "_SimpleLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-section">
                <i class="fas fa-recycle logo-icon"></i>
                <h1 class="brand-name">KUTIP</h1>
            </div>
            <h2 class="login-title">@ViewData["Title"]</h2>
            @* The main message will be in the body section below for clarity *@
        </div>

        <div class="login-body text-center">
            @* Added text-center to center the message within the body *@
            <p class="lead">
                Please check your email to reset your password.
            </p>
            @* You could add a link back to login here if desired:
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-login mt-3">Back to Login</a>
            *@
        </div>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year KUTIP. All rights reserved.</p>
        </div>
    </div>
</div>