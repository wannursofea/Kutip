@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "_SimpleLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-section">
                <i class="fas fa-recycle logo-icon"></i>
                <h1 class="brand-name">KUTIP</h1>
            </div>
            <h2 class="login-title">@ViewData["Title"]</h2> @* Displays "Reset password confirmation" *@
            <p class="login-subtitle">Your password has been successfully updated.</p> @* A clear message *@
        </div>

        <div class="login-body text-center"> @* Center the content *@
            <p class="lead mb-4">
                Your password has been reset. You can now log in with your new password.
            </p>
            <a asp-page="./Login" class="btn btn-primary btn-login">
                <i class="fas fa-sign-in-alt"></i>
                Click here to Log In
            </a>
        </div>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year KUTIP. All rights reserved.</p>
        </div>
    </div>
</div>

@* No specific scripts are needed for this simple confirmation page *@